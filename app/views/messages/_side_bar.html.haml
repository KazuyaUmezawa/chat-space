.side-bar
  .side-bar__user-name
    .side-bar__user-name__top-items
      %p.side-bar__user-name__top-items__name 
        = current_user.name
      %ul.side-bar__user-name__top-items__icons
        %li.side-bar__user-name__top-items__icons__edit-name
          = link_to new_group_path do
            = icon('fas', 'edit')
        %li.side-bar__user-name__top-items__icons__setting
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog')
  .group-list 
    - current_user.groups.each do |group|
      = link_to group_messages_path(group), class:"group" do
        .group__group-name
          = group.name
        .group__latest-message
          = group.show_last_message